#!/usr/bin/env bash

CERT="/home/jayed/keys/meangrape_hackage.pem"
SERVER=""

if [[ -z "$CERT" ]]; then
    echo "Please edit $0 so it points to your client certificate."
    exit
fi

if [[ -z "$SERVER" ]]; then
    echo "Please edit $0 so it points to your server."
    exit
fi

echo "$0 is broken."
echo "This endpoint returns HTML now not JSON."
exit

# Bash arrays ahead
IFS="[]"
links=($( curl -E $CERT -s https://$SERVER ))
unset IFS

# Remove all commas in array elements
declare -a nocomma=( ${links[@]/,/} )

# Replace two "s with a space
printf '%s\n' "${nocomma[@]/\"\"/\ }"
